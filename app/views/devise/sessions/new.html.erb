<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 ">
      <div class="sign-up-card">
        <div class="new-walletcard-body">
          <h1 class="sign-up-card-title text-center">Log in</h1>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class:"btn btn-flat mt-2 mb-3" %>
              </div>
            <% end %>

            <%= link_to "Sign up", new_registration_path(resource_name), class: "d-flex text-decoration-none" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "d-flex text-decoration-none"  %>
        </div>
      </div>
    </div>
  </div>
</div>
