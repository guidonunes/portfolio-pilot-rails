<h2>Edit user first name</h2>

<%= simple_form_for(current_user, as: :user, url: registration_path(:user), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
