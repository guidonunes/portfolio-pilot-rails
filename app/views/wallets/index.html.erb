<div class="container mt-5 mb-5">
  <h1 class= "dashboard-title tracking-in-expand">Welcome, <span class="dashboard-user"><%= current_user.first_name%>!</span></h1>
</div>

<div class="container d-flex justify-content-center">
  <div class="d-flex justify-content-center">
    <div class="card-total-balance">
      <div class="card-content">
        <div class="balance-title">Total Estimated Investement Value</div>
        <div class="separator"></div>
        <div class="balance">
          <div class="balance-left">
            <div class="currency mt-2 p-3">R$</div>
          </div>
          <div class="balance-right">
            <div class="balance-amount p-3"><strong>************ </strong><i class="fa-solid fa-eye-slash p3"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container mb-5">
    <%= link_to "New Wallet", new_wallet_path, class: "btn btn-flat text-decoration-none mb-3" %>
  <div class="card-general-vision p-5">
    <h2>My Wallets</h2>
    <div class="card-grid">
      <% @wallets.each do |wallet|%>
        <div class="card-my-wallets-preview mt-3">
          <div class="card-content">
            <div class="balance">
              <div class="balance-left">
                <div class="currency">R$</div>
              </div>
              <div class="balance-right">
                <div class="balance-title"><%= link_to wallet.name, wallet_path(wallet), class: "text-decoration-none" %></div>
                <div class="balance-amount">500.000,00</div>
              </div>
            </div>
            <div class="separator"></div>
            <div class="actions">
              <div class="history">
                <i class="fa-solid fa-arrow-right-to-bracket" style="color: #000000;"></i>
                <%= link_to "View Wallet", wallet_path(wallet), class: "text-decoration-none" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
