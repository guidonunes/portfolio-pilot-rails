
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="new-wallet-card">
        <div class="new-walletcard-body">
          <h1 class="new-wallet-card-title text-center">Create New Operation</h1>
            <%= simple_form_for [@wallet, @operation] do |f| %>
            <%= f.association :holding %>
            <%= f.input :quantity %>
            <%= f.input :avg_buy_price, label: "Price"%>
            <div class="d-flex justify-content-around">
            <%= f.submit "Create Operation", class:"btn btn-flat mt-3"%>
            <%= link_to "Cancel", wallet_path(@wallet), class:"btn btn-cancel mt-3 btn-return" %>
            </div>
           <% end %>

      </div>
    </div>
  </div>
  </div>
</div>
